<UserControl
    x:Class="DesktopClient.src.Views.Controls.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:DesktopClient.src.Enums"
    xmlns:local="clr-namespace:DesktopClient.src.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <StackPanel VerticalAlignment="Stretch" Background="#2B2B2B">
        <Button
            Margin="10,10,10,0"
            Padding="10,7"
            Command="{Binding ChangeTabCommand}"
            CommandParameter="{x:Static enums:MainTabs.Home}"
            Content="Home" />

        <Button
            Margin="10,10,10,0"
            Padding="10,7"
            Command="{Binding ChangeTabCommand}"
            CommandParameter="{x:Static enums:MainTabs.Search}"
            Content="Search" />

        <Button
            Margin="10,10,10,0"
            Padding="10,7"
            Command="{Binding ChangeTabCommand}"
            CommandParameter="{x:Static enums:MainTabs.Tools}"
            Content="Tools" />

        <Button
            Margin="10,10,10,0"
            Padding="10,7"
            Command="{Binding ChangeTabCommand}"
            CommandParameter="{x:Static enums:MainTabs.Submit}"
            Content="Submit recipe" />
    </StackPanel>
</UserControl>
