<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="AugmentedCooking.src.Views.Controls.Tabs.ChatPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:AugmentedCooking.src.Helpers">

    <Grid RowDefinitions="*,Auto">
        <Grid.Resources>
            <!-- User bubble -->
            <DataTemplate x:Key="UserTemplate">
                <Grid Padding="4">
                    <Frame
                        BackgroundColor="LightGreen"
                        CornerRadius="12"
                        Padding="8"
                        HorizontalOptions="End">
                        <Label
                            Text="{Binding Content.Text}"
                            TextColor="White"
                            LineBreakMode="WordWrap"/>
                    </Frame>
                </Grid>
            </DataTemplate>

            <!-- Bot bubble -->
            <DataTemplate x:Key="BotTemplate">
                <Grid Padding="4">
                    <Frame
                        BackgroundColor="#333"
                        CornerRadius="12"
                        Padding="8"
                        HorizontalOptions="Start">
                        <Label
                            Text="{Binding Content.Text}"
                            TextColor="White"
                            LineBreakMode="WordWrap"/>
                    </Frame>
                </Grid>
            </DataTemplate>

            <helpers:ChatMessageTemplateSelector
                x:Key="ChatSelector"
                UserTemplate="{StaticResource UserTemplate}"
                BotTemplate="{StaticResource BotTemplate}"/>
        </Grid.Resources>

        <!-- Welcome message -->
        <StackLayout
            Grid.Row="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            IsVisible="{Binding IsEmpty}">
            <Label
                Text="Welcome to MeLLama"
                FontSize="32"
                HorizontalOptions="Center"/>
            <Label
                Text="Your very own cooking AI assistant"
                FontSize="18"
                HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Chat history -->
        <CollectionView
            x:Name="MessagesView"
            Grid.Row="0"
            ItemsSource="{Binding Messages}"
            BackgroundColor="Transparent"/>

        <!-- Loading / error -->
        <ActivityIndicator
            Grid.Row="0"
            IsVisible="{Binding IsPendingChat}"
            IsRunning="{Binding IsPendingChat}"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Margin="0,0,0,60"/>

        <Label
            Grid.Row="0"
            Text="{Binding ErrorMessage}"
            TextColor="Red"
            IsVisible="{Binding IsErrorChat}"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Margin="0,0,0,40"/>

        <!-- Input & settings row -->
        <Grid
            Grid.Row="1"
            Padding="8"
            BackgroundColor="#f4f4f4"
            ColumnDefinitions="Auto,*,Auto">
            <!-- Settings button -->
            <Button
                Text="âš™"
                Command="{Binding ToggleSettingsCommand}"
                WidthRequest="40"/>

            <!-- Text entry -->
            <Editor
                Grid.Column="1"
                Text="{Binding InputText}"
                Placeholder="Message MeLLama"
                AutoSize="TextChanges"
                IsEnabled="{Binding IsNotPendingChat}"
                BackgroundColor="White"
                Margin="8,0"/>

            <!-- Send/Abort button -->
            <Button
                Grid.Column="2"
                Text="{Binding SendButtonIcon}"
                Command="{Binding SendOrAbortCommand}"
                WidthRequest="40"/>
        </Grid>

        <!-- Settings overlay -->
        <Grid
            IsVisible="{Binding IsSettingsVisible}"
            BackgroundColor="#80000000">
            <Frame
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="16">
                <StackLayout Spacing="12">
                    <StackLayout Orientation="Horizontal"
                                 VerticalOptions="Center">
                        <Label Text="Stream response"
                               VerticalOptions="Center"/>
                        <Switch IsToggled="{Binding StreamResponse}"
                                Margin="8,0,0,0"/>
                    </StackLayout>

                    <Button
                        Text="Upload image"
                        Command="{Binding UploadImageCommand}"/>

                    <Button
                        Text="Clear chat"
                        Command="{Binding ClearChatCommand}"/>

                    <StackLayout Orientation="Horizontal"
                                 VerticalOptions="Center">
                        <Label Text="Model:"
                               VerticalOptions="Center"/>
                        <Picker
                            ItemsSource="{Binding AvailableModels}"
                            SelectedItem="{Binding SelectedModel}"
                            WidthRequest="150"
                            Margin="8,0,0,0"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentView>
