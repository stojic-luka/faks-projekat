<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="AugmentedCooking.src.Views.Controls.Tabs.ToolsTabControls.FavoriteRecipesPanel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <VerticalStackLayout Padding="10"
                         Spacing="5">

        <Label
            Text="Favorite recipes"
            FontSize="18"
            Margin="15,5,15,15"/>

        <CollectionView
            ItemsSource="{Binding FavoriteRecipes}"
            EmptyView="No favorites yet.">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="10"
                        Padding="10"
                        HasShadow="True"
                        BorderColor="#DDD">
                        <VerticalStackLayout Spacing="5">

                            <Label
                                Text="{Binding Name}"
                                FontSize="14"
                                FontAttributes="Bold"/>

                            <Label
                                Text="{Binding Description}"
                                LineBreakMode="WordWrap"/>

                            <Button
                                Text="Remove"
                                Command="{Binding Source={x:Reference Root}, Path=BindingContext.RemoveRecipeCommand}"
                                CommandParameter="{Binding .}"
                                HorizontalOptions="End"/>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
